<% if data.sponsors.gold.present? %>
<div id="gold-sponsors-heading">
  <h2>Gold</h2>
</div>
<div id="gold-sponsors" class="sponsor_section">
  <% data.sponsors.gold.each_slice(3) do |sponsors| %>
  <div class="row">
    <% sponsors.each do |sponsor| %>
    <div class="large-4 columns">
      <div class="sponsor_wrapper">
        <div class="sponsor-image">
          <a href="<%= sponsor.link %>">
            <%= image_tag "sponsors/#{sponsor.logo}" %>
          </a>
        </div>
      </div>
      <p>
        <%= sponsor.text %>
      </p>
    </div>
    <% end %>
  </div>
  <% end %>
</div>
<% end %>