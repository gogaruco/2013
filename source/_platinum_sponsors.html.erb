<div id="platinum-sponsors-heading">
  <h2>Platinum</h2>
</div>
<div id="platinum-sponsors" class="sponsor_section">
  <% data.sponsors.platinum.each_slice(2) do |sponsor_one, sponsor_two| %>

      <div class="row">
        <div class="large-6 columns">

          <div class="large-4 columns">
            <a href="<%= sponsor_one.link %>">
              <div class="sponsor-image">
                <%= image_tag "sponsors/#{sponsor_one.logo}" %>
              </div>
            </a>
          </div>
          <div class="large-8 columns">
            <p>
              <%= sponsor_one.text %>
            </p>
          </div>
        </div>
    <% if sponsor_two.present? %>
        <div class="large-6 columns">
          <div class="large-4 columns">
            <a href="<%= sponsor_two.link %>">
              <div class="sponsor-image">
                <%= image_tag "sponsors/#{sponsor_two.logo}" %>
              </div>
            </a>
          </div>
          <div class="large-8 columns">
            <p>
              <%= sponsor_two.text %>
            </p>
          </div>
        </div>
    <% end %>
      </div>

  <% end %>

</div>