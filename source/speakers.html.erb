<%= partial 'page_banner', locals: {title: "Guest Speakers"} %>
<div id="featured-speakers-list">
  <div class="row">
    <% data.speakers.featured.each do |speaker| %>
        <div class="columns large-3">
          <a href="https://twitter.com/<%= speaker.twitter %>">
            <%= image_tag "speakers/#{speaker.slug}.jpg" %>
          </a>

          <h2><a href="https://twitter.com/<%= speaker.twitter %>"><%= speaker.name %></a></h2>

          <div class='divider'></div>
          <p><%= speaker.bio %></p>
        </div>
    <% end %>
  </div>
</div>

<div id="more-talks-heading">
  <h2>More Talks</h2>
</div>
<div id="more-talks">
  <% data.speakers.sorted.each_with_index do |speaker, index| %>
      <% if (index % 2 == 0) %>
          <div class="row">
      <% end %>

      <div class="large-6 columns">
        <div class="large-4 columns">
          <%= image_tag "speakers/#{speaker.slug}.jpg", class: "speaker-image" %>
        </div>
        <div class="large-8 columns">
            <span class="speaker-name">
              <a href="#" class="image_link">
                <%= image_tag 'twitter_icon.png' %>
              </a>
                <a href="#">
                  <%= speaker.name %>
                </a>
            </span>
          <!-- | view talk -->
                <span class="speaker-bio">
              <%= speaker.bio %>
            </span>
        </div>
        <div class="speaker-details">
        </div>
      </div>

      <% if (index % 2 == 1) %>
          </div>
      <% end %>

  <% end %>
</div>
</div>

<%= partial 'tweets' %>
