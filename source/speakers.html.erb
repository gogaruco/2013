<%= partial 'page_banner', locals: {title: "Speakers"} %>

<div id="speakers-roster">
  <% data.speakers.sorted.each_slice(2) do |row| %>
    <div class="row">
      <% row.each do |speaker| %>
        <div class="large-6 columns" id="<%= speaker.slug %>">
          <div class="large-4 columns">
            <%= image_tag "speakers/#{speaker.slug}.jpg", class: "speaker-image" %>
          </div>
          <div class="large-8 columns">
            <span class="speaker-name">
              <a href="https://twitter.com/<%= speaker.twitter %>" class="image_link">
                <%= image_tag 'twitter_icon.png' %>
              </a>
              <%= speaker.name %>
            </span>
            <!-- | view talk -->
            <div class="speaker-bio">
              <%= speaker.bio %>
            </div>
            <div class="speaker-description">
              <% _, session = data.schedule.sessions.detect {|_, ses| ses.speakers.include?(speaker.slug) } %>
              <span class="byline">session:</span> <a href="/schedule.html#<%= speaker.slug %>"><%= session.title %></a>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>

