<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
	  <meta name="viewport" content="width=device-width" />
    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    
    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= data.page.title || "The Middleman" %></title>
    
    <%= stylesheet_link_tag "normalize", "all" %>
	  <%= javascript_include_tag "foundation.modernizr" %>
  </head>
  
  <body class="<%= page_classes %>">
    <header>
      <div class="row">
        <ul>
          <li><%= image_tag 'GoGaruco-logo.png' %></li>
          <li><a href="#">Home</a></li>
          <li><a href="#">About</a></li>
          <li><a href="#">Location</a></li>
        </ul>
      </div>
    </header>
      
    <%= yield %>

    <footer>
      <div class="row center">
        &copy; 2013 Golden Gate Ruby Conference, LLC
      </div>
      <div class="row center">
        <ul class="past_years">
          <li><a href="http://2012.gogaruco.com">2012</a></li>
          <li><a href="http://2011.gogaruco.com">2011</a></li>
          <li><a href="http://2010.gogaruco.com">2010</a></li>
          <li><a href="http://2009.gogaruco.com">2009</a></li>
        </ul>
      </div>
      <div class="row center credits">
        Designed by <a href="http://www.sheenaoosten.com/">Sheena Oosten</a> <span id="bar">|</span> Made by Abhi & <a href="http://www.hjhart.com">James</a>
      </div>
    </footer>

    <%= javascript_include_tag "all" %>
    <script>
      $(document).foundation();
    </script>
  </body>
</html>
